{
  "name": "js-auto-format-mode",
  "version": "1.1.1",
  "main": "index.js",
  "repository": "ybiquitous/js-auto-format-mode",
  "author": "Masafumi Koba <ybiquitous@gmail.com>",
  "license": "GPL-3.0",
  "private": true,
  "devDependencies": {
    "ybiq": "*"
  },
  "scripts": {
    "lint:md": "markdownlint --ignore node_modules --ignore CHANGELOG.md \"**/*.md\"",
    "lint:md:fix": "prettier --write \"**/*.md\"",
    "lint": "npm-run-all --print-label --parallel lint:*",
    "commitmsg": "commitlint -E GIT_PARAMS",
    "precommit": "lint-staged",
    "release": "standard-version --sign --tag-prefix=",
    "release:dry-run": "npm run release -- --dry-run"
  },
  "lint-staged": {
    "linters": {
      "*.md": [
        "prettier --write",
        "markdownlint",
        "git add"
      ]
    },
    "ignore": [
      "CHANGELOG.md"
    ]
  },
  "standard-version": {
    "scripts": {
      "postbump": "./scripts/postbump"
    }
  }
}
